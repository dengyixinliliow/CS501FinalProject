<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddProductDetailActivity">

    <TextView
        android:id="@+id/addProduct_dTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addProduct_card_layout"
        app:layout_constraintVertical_weight="1.5"
        android:text="Please add details about your product:"
        android:gravity="bottom"
        android:layout_marginStart="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/addProduct_card_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addProduct_dTitle"
        app:layout_constraintBottom_toTopOf="@id/addProduct_btnSubmit"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintVertical_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/addProduct_pNameHolder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:text="Product Name"
                        android:gravity="center"
                        android:layout_marginRight="10dp"/>
                    <EditText
                        android:id="@+id/addProduct_edtPName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@drawable/edit_text_bg"
                        android:layout_marginVertical="6dp"
                        android:layout_marginRight="6dp"
                        android:paddingHorizontal="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addProduct_pCategoryHolder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:text="Product Category"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    />

                <Spinner
                    android:id="@+id/addProduct_edtPCategory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginVertical="6dp"
                    android:layout_marginRight="6dp"
                    android:spinnerMode="dropdown"
                    android:paddingHorizontal="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addProduct_pTypeHolder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:text="Product Type"
                    android:gravity="center"
                    android:layout_marginRight="10dp"/>

                <Spinner
                    android:id="@+id/addProduct_edtPType"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginVertical="6dp"
                    android:layout_marginRight="6dp"
                    android:spinnerMode="dropdown"
                    android:paddingHorizontal="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addProduct_pColorHolder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:text="Product Color"
                    android:gravity="center"
                    android:layout_marginRight="10dp"/>
                <EditText
                    android:id="@+id/addProduct_edtPColor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginVertical="6dp"
                    android:layout_marginRight="6dp"
                    android:paddingHorizontal="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addProduct_pSizeHolder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:text="Product Size"
                    android:gravity="center"
                    android:layout_marginRight="10dp"/>
                <EditText
                    android:id="@+id/addProduct_edtPSize"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginVertical="6dp"
                    android:layout_marginRight="6dp"
                    android:paddingHorizontal="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addProduct_pConditionHolder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:text="Product Condition"
                    android:gravity="center"
                    android:layout_marginRight="10dp"/>
                <EditText
                    android:id="@+id/addProduct_edtPCondition"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginVertical="6dp"
                    android:layout_marginRight="6dp"
                    android:paddingHorizontal="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addProduct_pPriceHolder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:text="Product Price"
                    android:gravity="center"
                    android:layout_marginRight="10dp"/>
                <EditText
                    android:id="@+id/addProduct_edtPPrice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginVertical="6dp"
                    android:layout_marginRight="6dp"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addProduct_pAddressHolder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:text="Pickup Address"
                    android:gravity="center"
                    android:layout_marginRight="10dp"/>
                <EditText
                    android:id="@+id/addProduct_edtAddress"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginVertical="6dp"
                    android:layout_marginRight="6dp"
                    android:paddingHorizontal="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addProduct_pDescriptionHolder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:text="Description"
                    android:gravity="center"
                    android:layout_marginRight="10dp"/>
                <EditText
                    android:id="@+id/addProduct_edtDescription"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginVertical="6dp"
                    android:layout_marginRight="6dp"
                    android:paddingHorizontal="10dp"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/addProduct_btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/addProduct_view"
        app:layout_constraintTop_toBottomOf="@id/addProduct_card_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="1"
        android:text="Submit"
        android:background="@drawable/btn_bg"/>

    <View
        android:id="@+id/addProduct_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addProduct_btnSubmit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>