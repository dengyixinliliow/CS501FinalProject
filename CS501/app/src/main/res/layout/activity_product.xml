<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCEAED"
    tools:context=".ProductActivity">

    <ScrollView
        android:layout_width="369dp"
        android:layout_height="635dp"
        android:layout_marginTop="16dp"
        android:background="#FEF9F7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_ivProduct"
                android:layout_width="193dp"
                android:layout_height="193dp"
                android:layout_gravity="center"
                android:layout_marginTop="44dp"
                app:srcCompat="@drawable/fui_idp_button_background_facebook" />

            <TextView
                android:id="@+id/product_txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="product name"
                android:textAlignment="center"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_txtSellerUsernameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seller Name: "
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_txtSellerUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="seller"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/product_btnContactSeller"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginStart="50dp"
                    android:background="@drawable/btn_bg"
                    android:text="contact"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_txtPriceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: "
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="price"
                    android:inputType="number"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_txtTypeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: "
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_txtType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="type"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_txtCategoryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category: "
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_txtCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="category"
                    android:inputType="date"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_txtConditionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Condition: "
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_txtCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="condition"
                    android:inputType="date"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_txtSizeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size: "
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_txtSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="size"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/product_txtDescriptionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="product description"
                android:textSize="20dp" />

            <Button
                android:id="@+id/product_btnReviews"
                android:layout_width="120dp"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_bg"
                android:text="see reviews"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/product_btnAddToBag"
        android:layout_width="112dp"
        android:layout_height="43dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_bg"
        android:text="add to bag"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>