<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity"
    android:background="@color/black"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:src="@drawable/market_img"/>

            <LinearLayout
                android:id="@+id/search_search_bar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp">

                <EditText
                    android:id="@+id/search_search_box"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginRight="5dp"
                    android:hint="Search Products from Market!"
                    android:paddingLeft="15dp"/>

                <ImageButton
                    android:id="@+id/search_search_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/black"
                    android:src="@drawable/search_btn"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/search_btnMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See Nearby Products on Map"
                    android:textColor="@color/bg_pink"
                    android:backgroundTint="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_department_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">

                <Button
                    android:id="@+id/search_btnMen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Men"/>

                <Button
                    android:id="@+id/search_btnWomen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Women"/>

                <Button
                    android:id="@+id/search_btnKids"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kids"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_category_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/search_department_bar">

                <Button
                    android:id="@+id/search_btn_jackets_coats"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Jackets&amp;Coats"/>

                <Button
                    android:id="@+id/search_btn_onepieces_dresses"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="One Pieces&amp;Dress"/>

                <Button
                    android:id="@+id/search_btn_shirts"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Shirts"/>

                <Button
                    android:id="@+id/search_btn_tops_tshirts"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Tops&amp;T-Shirts"/>

                <Button
                    android:id="@+id/search_btn_hoodies_sweatshirts"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Hoodies&amp;Sweatshirts"/>

                <Button
                    android:id="@+id/search_btn_jeans_pants"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Jeans&amp;Pants"/>

                <Button
                    android:id="@+id/search_btn_shoes"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Shoes"/>

                <Button
                    android:id="@+id/search_btn_bags"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Bags"/>

            </LinearLayout>

            <Button
                android:id="@+id/search_btnCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"/>



        </LinearLayout>

    </ScrollView>



    <fragment
        android:id="@+id/fragment_nagivation"
        android:name="com.example.finalproject.NavigationFragment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout="@layout/fragment_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>